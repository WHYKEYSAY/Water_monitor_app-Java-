<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    >

    <com.github.anastr.speedviewlib.SpeedView
        android:id="@+id/speedView"
        android:layout_width="326dp"
        android:layout_height="331dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="41dp"
        android:layout_marginRight="41dp"
        app:sv_highSpeedColor="#76FF03"
        app:sv_lowSpeedColor="#D50000"
        app:sv_lowSpeedPercent="29"
        app:sv_mediumSpeedColor="#FFFF00"
        app:sv_mediumSpeedPercent="79"
        app:sv_speedTextColor="@android:color/white"
        app:sv_speedTextSize="40dp"
        app:sv_textColor="@android:color/white"
        app:sv_unit="" />


    <Button
        android:id="@+id/test_btn"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="126dp"
        android:layout_marginRight="126dp"
        android:layout_marginBottom="171dp"
        android:text="TEST"
        android:textColor="@color/colorPrimary"
        android:textSize="50dp"
        android:textStyle="bold" />


</RelativeLayout>